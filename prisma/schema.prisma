model Visitor {
  id        String   @id @default(cuid())
  name      String
  phone     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model websiteData {
  id         String   @id @default(cuid())
  banner     String?
  about      String?
  aboutImage String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
